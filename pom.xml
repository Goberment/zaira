    <modelVersion>4.0.0</modelVersion>

    <groupId>Conexion</groupId>
    <artifactId>Conexion</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
